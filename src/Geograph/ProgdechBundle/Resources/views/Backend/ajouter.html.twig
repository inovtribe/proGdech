{% extends 'GeographProgdechBundle:Backend:backend_layout.html.twig' %}
{% set adminMenu = true %}

{% block title %}Détail d'un point de collecte{% endblock %}

{% block content %}
<h3>Formulaire de point de collecte</h3>
<div class="well col-sm-6">
    <form action ="{{ path('pointcollecteadd') }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
        <div class="form-group-sm">
            <div class="col-sm-3 text-right">
                {{ form_label(form.reference, "Référence") }}
            </div>
            <div class="col-sm-9">
                {{ form_errors(form.reference) }}
                {{ form_widget(form.reference, { 'attr':  {'class': 'form-control'}}) }}
            </div>
        </div>
            
        <div class="form-group-sm">
            <div class="col-sm-3 text-right">
                {{ form_label(form.nom, "Nom") }}
            </div>
            <div class="col-sm-9">
                {{ form_errors(form.nom) }}
                {{ form_widget(form.nom, { 'attr':  {'class': 'form-control'}}) }}
            </div>
        </div>
            
        <div class="form-group-sm">
            <div class="col-sm-3 text-right">
                {{ form_label(form.adresse, "Adresse") }}
            </div>
            <div class="col-sm-9">
                {{ form_errors(form.adresse) }}
                {{ form_widget(form.adresse, { 'attr':  {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group-sm">
            <div class="col-sm-3 text-right">
                {{ form_label(form.commune, "Commune") }}
            </div>
            <div class="col-sm-9">
                {{ form_errors(form.commune) }}
                {{ form_widget(form.commune, { 'attr':  {'class': 'form-control'}}) }}
            </div>
        </div>
            
        <div class="form-group-sm">
            <div class="col-sm-3 text-right">
                {{ form_label(form.latitude, "Latitude") }}
            </div>
            <div class="col-sm-3">
                {{ form_errors(form.latitude) }}
                {{ form_widget(form.latitude, { 'attr':  {'class': 'form-control'}}) }}
            </div>
            <div class="col-sm-3 text-right">
                {{ form_label(form.longitude, "Longitude") }}
            </div>
            <div class="col-sm-3">
                {{ form_errors(form.longitude) }}
                {{ form_widget(form.longitude, { 'attr':  {'class': 'form-control'}}) }}
            </div>
        </div>
            
        <div class="form-group-sm">
            <div class="col-sm-3 text-right">
                {{ form_label(form.emplacement, "Nombre d'emplacements") }}
            </div>
            <div class="col-sm-9">
                {{ form_errors(form.emplacement) }}
                {{ form_widget(form.emplacement, { 'attr':  {'class': 'form-control'}}) }}
            </div>
        </div>
        
        <input type="submit" class="btn btn-primary" />
    </form>
</div>
{% endblock %}