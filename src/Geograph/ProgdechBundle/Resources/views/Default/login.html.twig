{% extends 'GeographProgdechBundle:Default:frontend_layout.html.twig' %}

{% block title %}Identification des utilisateurs{% endblock %}

{% block content %}
{% if error %}
    <div>{{ error.message }}</div>
{% endif %}

<form action="{{ path('login_check') }}" method="post">
    <div class="form-group">
        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 input-group">
            <label for="username">Login :</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>
    </div>
    <label for="password">Mot de passe :</label>
    <input type="password" id="password" name="_password" />

    {#
        Si vous voulez contrôler l'URL vers laquelle l'utilisateur est redirigé en cas de succès
        (plus de détails ci-dessous)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit">login</button>
</form>
{% endblock %}
